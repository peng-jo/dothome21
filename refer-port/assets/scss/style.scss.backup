* {
    margin: 0; padding: 0;
    line-height: 94%;
}

//reset
/* 여백 초기화 */
body,
div,
dl,
dt,
dd,
ul,
ol,
li,
h1,
h2,
h3,
h4,
h5,
h6,
pre,
code,
form,
fieldset,
legend,
textarea,
p,
blockquote,
th,
td,
input,
select,
button,
figure,
figcaption {
    margin: 0;
    padding: 0
}

/* 폰트 초기화 */
body,
button,
input,
select,
table,
textarea {
    font-size: 14px;
    line-height: 1.5;
    color: #222;
    font-family: Poppins, AppleSDGothicNeo-Regular, 'Malgun Gothic', '맑은 고딕', dotum, '돋움', sans-serif;
}

/* 링크 초기화 */

a {
    color : #222;
    text-decoration: none;
}


/* 목록 초기화 */
ol,
ul {
    list-style: none
}

/* 스타일 초기화 */
strong {
    font-weight: normal;
}
em {
    font-style: normal;
}

img {
    width: 100%;
}

/*body*/
body {
    background-color: #000;
    .sce__video {
        position: fixed;
        width: 100vw;
        height: 100vh;
        z-index: 7001;
        opacity: 0;
    }
}
body::-webkit-scrollbar {
    display: none; /* Chrome, Safari, Opera*/
}
#header {
    display: flex;
    box-sizing: border-box;
    justify-content:space-between;
    color: #fff;
    font-family: 'NanumSquare';
    font-size: 20px;
    font-weight: 300;
    position: fixed;
    z-index: 9001;
    top: 40px;
    height: 43px;
    width: 100%;
    padding:0 50px;

    .header__left {
        li {
            vertical-align: middle;
            span > div {
                margin-bottom: 6px;
            }
            .header__num {
                color: #F9DB53;
            }
        }
        .header__circle {          
            width: 46px;
            height: 46px;
            margin-right: 10px;
        }
        .header__percent {
            position: relative;
            display: inline-block;
            width: 16vw; height: 3px;
            background: #fff;
            border-radius: 5px;
            .header__percent__show {
                display: inline-block;
                position: absolute;
                background: #F9DB53;
                width: 10%;
                height: 100%;
            }
        }
    }

    .header__right {
        li {
            margin-left: 34px;
            vertical-align: middle;
        }
        .yellow {
            
            text-align: center;
            background-color: #F9DB53;
            color: #fff;
            width: 208px; height: 27px;
            span {
                vertical-align: sub;
            }
        }
    }

    ul {
        li {
            display: inline-block;
        }
    }
}

#section1 { z-index: 9000;}
#section2 { z-index: 8000;}
#section3 { z-index: 7000; height: 12834px;}
#section4 { z-index: 7100;}
#section5 { z-index: 7200;}
#section6 { z-index: 7300;}
#section7 { z-index: 7400;}
#section8 { z-index: 7500;}
#section9 { z-index: 7600;}

.sce3 {
    color:#fff;
    position: fixed;
    left: 0;top: 0;
    z-index: 1000;
    width: 12834px;
    height: 100vh;
    background: #000;
    overflow:hidden;
}

.content__item {
    background: #000;
    display: none;
    width: 100%;
    // height: 100vh;
    position: relative;
    &.show {
        display: block;
    }
}

#section1 {
    .span__cont {
        display: none;
        justify-content: center;
        align-items: center;
        height: 100vh;
        width: 100%;

        &.show {
            display: flex;
        }
        span {
            text-align: center;
            display: block;
            font-size: 20vw;
            font-weight: 800;
            color: #F9DB53;
        }
    }
}

#section2 {
    .span__cont {
        position: relative;
        width: 90vw;
        font-size:10vw;
        font-weight: 900;
        padding: 224px 0 224px 0;
        color: #fff;
        span {
            text-align: right;
            display: block;
        }
        .span__cont2 {
            margin-top: 224px;
            transform: translate3d(0,0,0);
            z-index: -1;
            color: #F9DB53;
            position: absolute;
            right: 0; top: 0;
            &.scroll {
                animation: scrollback 1s;
            }
            
        }
    }
}


@keyframes scrollback {
    50% {
        transform: translate3d(0,-5px,0);
    }
}
#section3 {
    height: 6000px;
}

.port {
    font-size: 1.3vw;
    position: fixed;
    color: #F9DB53;
    font-weight: 900;
    left: 50px;
    bottom: 50px;
    &:before {
        content: '';
        position: absolute;
        top: 28px;
        height: 2px;
        width: 100%;
        background-color: #F9DB53;
    }
}
.slowColor {
    transition: background-color ease 0.3s;
}

.blink { 
    animation: blink-effect 0.1s linear infinite;
}

@keyframes blink-effect {
    50% { opacity: 0; } 
} 